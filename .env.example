# =============================================================================
# Exposure App — Environment Variables
# Copy this file to .env.local and fill in the values.
# =============================================================================

# ---------------------------------------------------------------------------
# Database (Supabase Postgres)
# ---------------------------------------------------------------------------

# Pooled connection URL (via PgBouncer) — used by Prisma for queries
DATABASE_URL=postgresql://postgres.[project-ref]:[password]@aws-0-[region].pooler.supabase.com:6543/postgres?pgbouncer=true

# Direct connection URL — used by Prisma for migrations
DIRECT_URL=postgresql://postgres.[project-ref]:[password]@aws-0-[region].pooler.supabase.com:5432/postgres

# ---------------------------------------------------------------------------
# Supabase
# ---------------------------------------------------------------------------

# Your Supabase project URL (public)
NEXT_PUBLIC_SUPABASE_URL=https://your-project-ref.supabase.co

# Supabase anonymous/public key (safe to expose client-side)
NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJ...your-anon-key

# Supabase service role key (server-side only — NEVER expose to the client)
# SUPABASE_SERVICE_ROLE_KEY=eyJ...your-service-role-key

# ---------------------------------------------------------------------------
# Web3
# ---------------------------------------------------------------------------

# WalletConnect Cloud project ID — get one at https://cloud.walletconnect.com
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=your_walletconnect_project_id

# Alchemy API key — get one at https://dashboard.alchemy.com
NEXT_PUBLIC_ALCHEMY_API_KEY=your_alchemy_api_key

# ---------------------------------------------------------------------------
# Authentication & Security
# ---------------------------------------------------------------------------

# Secret used to sign session cookies (min 32 characters, random string)
# Generate with: openssl rand -hex 32
SESSION_SECRET=change-me-generate-a-strong-random-secret

# Encryption key for TOTP 2FA secrets (32-byte hex string)
# Generate with: openssl rand -hex 32
TOTP_ENCRYPTION_KEY=change-me-generate-a-32-byte-hex-key

# Secret for validating blockchain webhook signatures
# Generate with: openssl rand -hex 32
WEBHOOK_SECRET=change-me-generate-a-webhook-secret

# ---------------------------------------------------------------------------
# Platform Configuration
# ---------------------------------------------------------------------------

# Public-facing platform URL (used for CORS, SIWE domain, redirects)
NEXT_PUBLIC_PLATFORM_URL=http://localhost:3000

# Platform display name
NEXT_PUBLIC_PLATFORM_NAME=Exposure

# Supported blockchain networks (comma-separated)
NEXT_PUBLIC_SUPPORTED_CHAINS=ethereum,base,arbitrum

# ---------------------------------------------------------------------------
# Third-Party Services (optional — stubs used if not provided)
# ---------------------------------------------------------------------------

# KYC provider (Sumsub)
# SUMSUB_APP_TOKEN=your_sumsub_app_token
# SUMSUB_SECRET_KEY=your_sumsub_secret_key

# Email provider (SendGrid)
# SENDGRID_API_KEY=your_sendgrid_api_key
# SENDGRID_FROM_EMAIL=noreply@yourdomain.com

# Chain analysis (Chainalysis)
# CHAINALYSIS_API_KEY=your_chainalysis_api_key
